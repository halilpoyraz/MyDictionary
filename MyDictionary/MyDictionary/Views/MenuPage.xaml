<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyDictionary.Views.MenuPage" Title="Menu">
    <StackLayout BackgroundColor="White">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Image Source="logo.png" VerticalOptions="Center" HorizontalOptions="Center"></Image>
        </StackLayout>
        <StackLayout Padding="10" Spacing="10" VerticalOptions="CenterAndExpand">
            <Label Text="Sözlük Hakkında" TextColor="Black"></Label>
            <Label Text="İletişim" TextColor="Black"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="End" Padding="0,0,0,8">
            <Label Text="Halil İbrahim POYRAZ" TextColor="Blue" FontSize="Micro"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" HeightRequest="20" VerticalOptions="End">
            <Label Text="Her Hakkı Saklıdır ®" TextColor="Blue" FontSize="Micro"></Label>
        </StackLayout>
    </StackLayout>
</ContentPage>